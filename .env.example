# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Zyte API key (for Zyte /v1/extract)
# Get your API key from https://www.zyte.com/
VITE_ZYTE_API_KEY=your_zyte_api_key_here

# Optional non-Vite variant (also supported by the code)
ZYTE_API_KEY=your_zyte_api_key_here

# OpenAI API Key (for AI analysis)
VITE_OPENAI_API_KEY=PASTE_YOUR_OPENAI_KEY_HERE
OPENAI_API_KEY=PASTE_YOUR_OPENAI_KEY_HERE

# ═══════════════════════════════════════════════════════════════════════════
# UNIFIED PIPELINE FEATURE FLAGS
# ═══════════════════════════════════════════════════════════════════════════

# Enable shared study-core module for unified execution
# Set to "true" to use the unified pipeline (same logic for instant & scheduled)
# Set to "false" to use legacy implementations (default for safety)
VITE_USE_SHARED_CORE=false
USE_SHARED_CORE=false

# Enable parity validation logging
# Set to "false" to disable parity checking logs
VITE_ENABLE_PARITY_VALIDATION=true
ENABLE_PARITY_VALIDATION=true

# Enable detailed debug logging
# Set to "true" to see verbose execution logs
VITE_ENABLE_DEBUG_LOGGING=false
ENABLE_DEBUG_LOGGING=false
